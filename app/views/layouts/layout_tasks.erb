<!DOCTYPE html>
  <head>
    <title>Jobsite Log - Tasks</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
  <header>
            <div class="dropdown" style="float:left;">
                <button class="dropbtn">Menu</button>
                <div class="dropdown-content" style="left:0;">
                  <% unless @jobsite.nil? %>
                      <a href="/jobsites">Jobsites</a>
                  <% end %>
                  <a href="/logout">Log Out</a>
                </div>
              </div>

              <div  id="headerWelcome"> Welcome, <%=current_user.first_name%> <%=current_user.last_name[0].capitalize%>!</div>
  </header>

        <div class="main_page">
            <h2 id="sub_header">
            <a href="/jobsite/<%=@jobsite.id%>"><%=@jobsite.name%></a>
            <button id="back_button" style="float:right;"><a href="/jobsite/<%= @jobsite.id %>">X</a></button>
            </h2>

            <%= yield %>

            <% if @jobsite.tasks.size > 0 %>
            <div id="display_list">   
                <h2>Jobsite Tasks</h2> 
                <table>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Code</th>
                        <th>Description</th>
                    </tr>
                    <% @jobsite.tasks.each do |task| %>
                    <tr>
                        <td  style="width:1%" ><button><a href="/jobsite/<%= @jobsite.id %>/task/delete/<%= task.id %>">X</a></button></td>
                        <td  style="width:1%" ><button><a href="/jobsite/<%= @jobsite.id %>/task/edit/<%= task.id %>">...</a></button></td>
                        <td style="width:5%"><%=task.code%></td>
                        <td style="width:20%"><%=task.name%></td>
                    </tr>
                    <% end %>
                </table>
            </div>
        <%end%>

        </div>

    </body>
</html>
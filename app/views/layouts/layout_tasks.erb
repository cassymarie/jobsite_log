<!DOCTYPE html>
  <head>
    <title>Jobsite Log - Tasks</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
  </head>
  <body>
  <header>
            <div class="dropdown" style="float:left;">
                <button class="dropbtn">Menu</button>
                <div class="dropdown-content" style="left:0;">
                  <a href="/jobsites">Jobsites</a>
                  <a href="/logout">Log Out</a>
                </div>
              </div>

              <div  id="headerWelcome"> Welcome, <%=current_user.first_name%> <%=current_user.last_name[0].capitalize%>!</div>
  </header>

        <div class="main_page">
            <h2 id="sub_header">
            <%=@jobsite.name%>
            <button id="subheader_button"><a href="/jobsite/<%= @jobsite.id %>">Dashboard</a></button>
            </h2>

            <%= yield %>

            <% if @jobsite.tasks.size > 0 %>
            <div id="display_list" width=50% style="text-align:center;">   
                <h2>Jobsite Tasks</h2> 
                <table id="tbl_list_job"  width=45% style="text-align:left;">
                    <tr>
                        <th id="blank_header"></th>
                        <th id="blank_header"></th>
                        <th>Code</th>
                        <th>Description</th>
                    </tr>
                    <% @jobsite.tasks.each do |task| %>
                    <tr>
                        <td id="blankcell" width=5px><button><a href="/jobsite/<%= @jobsite.id %>/task/delete/<%= task.id %>">X</a></button></td>
                        <td id="blankcell" width=5px><button><a href="/jobsite/<%= @jobsite.id %>/task/edit/<%= task.id %>">...</a></button></td>
                        <td style="text-align: left;" width=40px><%=task.code%></td>
                        <td  style="text-align: left;" width=200px><%=task.name%></td>
                    </tr>
                    <% end %>
                </table>
            </div>
        <%end%>

        </div>

    </body>
</html>
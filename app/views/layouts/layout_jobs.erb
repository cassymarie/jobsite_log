<!DOCTYPE html>
  <head>
    <title>Jobsite Log - Jobs</title>
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
  <header>
        <a href="/jobsites">Jobsites</a>
        <a href="/logout">Log Out</a>
  </header>

    <div class="wrapper">
        <h2><a href="/jobsite/<%=@jobsite.id%>"><%=@jobsite.name%></a></h2>

        <%= yield %>

        <% if @jobs.size > 1 %>
            <div>   
                <h3>Current Jobs</h3> 
                <table>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Job No.</th>
                        <th>Job Name</th>
                        <th>Customer</th>
                        <th> Areas :</th>
                        <%@site_areas.each do |area|%>
                            <th><%=area.code%></th>
                        <%end%>
                    </tr>
                    <% @jobs.each do |job| %>
                    <tr>
                        <td><button><a href="/jobsite/<%= @jobsite.id %>/jobs/delete/<%= job.id %>">X</a></button></td>
                        <td><button><a href="/jobsite/<%= @jobsite.id %>/jobs/edit/<%= job.id %>">...</a></button></td>
                        <td><%=job.job_number%></td>
                        <td><%=job.name%></td>
                        <td><%=job.customer%></td>
                        <td></td>
                            <% @site_areas.each do |area| %>
                                <td><%='X' if job.areas.include?(area)%></td>
                            <% end %>
                    </tr>
                    <% end %>
                </table>
            </div>
        <%end%>
        <button><a href="/jobsite/<%= @jobsite.id %>">Cancel</a></button>
    </div>
  </body>
</html>
<h2 >Welcome, <%=@user.first_name %></h2>
<h3>Jobsite List...</h3>
<ul>
    <% @jobsites.each do |jobsite|%>
    <li><div id="jobsite_card">
        <h3><a href="/jobsite/<%=jobsite.id%>"><%= jobsite.name %></a></h3>
        <p><%= jobsite.jobs.count %> Current Jobs </p>
        <p><%= jobsite.employees.count %> Site Employees </p>
    </div></li>
    <%end%>
</ul>
<br>
<br>
<div>
    <h3>Create New Jobsite</h3>
    <form action="/jobsite/new" method="POST">
        <label>Name: </label><input type="text" name="jobsite[name]">
        <input type="submit" value="+">
    </form>
</div>
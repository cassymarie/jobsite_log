<h2 id="sub_header">
    <a href="/jobsites">My Jobsites</a>
    <button id="back_button" style="float:right;"><a href="/jobsites">X</a></button>
</h2>

<div id="form">
<h2>Add Jobsite </h2>
    <div id = "form">
        <h2>Create New Jobsite</h3>
        <form action="/jobsite/new" method="POST">
            <label>Name: </label><input type="text" name="jobsite[name]">
            <input type="submit" value="+">
        </form>
    </div>

<div id="display_list">
   <ul style="display:inline-flex;">
        <% @jobsites.each do |jobsite|%>
            <li id="jobsite_card" >
                <h3><a href="/jobsite/<%=jobsite.id%>"><%= jobsite.name %></a></h3>
                <p><%= jobsite.jobs.count %> Current Jobs </p>
                <p><%= jobsite.employees.count %> Site Employees </p>
            </li>
        <%end%>
    </ul>
</div>

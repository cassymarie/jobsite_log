<h1><%= @jobsite.name %></h1>

<h2>Jobs   <button><a href="/jobsite/<%= @jobsite.id %>/jobs/new"><%= @jobs.size == 0 ? 'Add' : 'Add/Edit'%></a></button></h2> 

<% if @jobs.size > 0%>
<table>
    <tr>
        <th>Job No.</th>
        <th>Job Name</th>
        <th>Customer</th>
        <th>        </th>
        <%@site_areas.each do |area|%>
        <th><%=area.code%></th>
        <%end%>
    </tr>

    <% @jobs.each do |job| %>
        <tr>
            <td><%=job.job_number%></td>
            <td><%=job.name%></td>
            <td><%=job.customer%></td>
            <td>        </td>
            <% @site_areas.each do |area| %>
                <td><%='X' if job.areas.include?(area)%></td>
            <% end %>
        </tr>
    <% end %>
</table>
<%end%>
<br>
<h2>Site Crew   <button><a href='/sitecrew/<%= @jobsite.id %>/edit'><%= @employees.size == 0 ? 'Add' : 'Add/Edit'%></a></button></h2>
<% if @employees.size > 0%>
<table>
    <tr>
        <th>Employee Name</th>
        <th>Title</th>
    </tr>
    <%@employees.each do |employee|%>
    <tr>
        <td><%=employee.full_name%></td>
        <td><%=Title.find(employee.title_id).title%></td>
    </tr>
    <%end%>
</table>
<%end%>
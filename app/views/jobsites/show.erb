<h2 id="sub_header"><%=@jobsite.name%>
    <button id="subheader_button"><a href="/jobsites">Back</a></button>
</h2>

<div id="jobsite_section">
    <div id="jobsite_section_left">
        <div id = "jobsite_form">
            <h2>Jobs   <button><a href="/jobsite/<%= @jobsite.id %>/jobs/new"><%= @jobsite.jobs.size == 0 ? 'Add' : 'Add/Edit'%></a></button></h2> 

            <% if @jobsite.jobs.size > 0%>
            <table>
                <tr>
                    <th>Job No.</th>
                    <th>Job Name</th>
                    <th>Customer</th>
                    <th>        </th>
                    <%@jobsite.site_areas.each do |area|%>
                    <th><%=area.code%></th>
                    <%end%>
                </tr>

                <% @jobsite.jobs.each do |job| %>
                    <tr>
                        <td><%=job.job_number%></td>
                        <td><%=job.name%></td>
                        <td><%=job.customer%></td>
                        <td>        </td>
                        <% @jobsite.site_areas.each do |area| %>
                            <td><%='X' if job.areas.include?(area)%></td>
                        <% end %>
                    </tr>
                <% end %>
            </table>
            <%end%>
        </div>
        <br>
        <div id="jobsite_form">
            <h2>Site Crew   <button><a href='/sitecrew/<%= @jobsite.id %>/new'><%= @jobsite.employees.size == 0 ? 'Add' : 'Add/Edit'%></a></button></h2>
            <% if @jobsite.employees.size > 0%>
            <table>
                <tr>
                    <th>Employee Name</th>
                    <th>Title</th>
                </tr>
                <%@jobsite.employees.each do |employee|%>
                <tr>
                    <td style="width:20%"><%=employee.full_name%></td>
                    <td><%=Title.find(employee.title_id).title%></td>
                </tr>
                <%end%>
            </table>
            <%end%>
        </div>
    </div>
    <br>
    <div id="jobsite_section_right">
        <div id="jobsite_form">
            <form method="get" action="/jobsite/<%= @jobsite.id %>/time_entry/by_day">
                <h2>Time Entry</h2>
                <% if @error %>
                    <%= "You need to enter the Week Ending to continue"%>
                <% end %>
                <label for="workday">Select Day to View</label><br>
                <select id="workday" name="work_date"> 
                        <option value=6>Monday</option>
                        <option value=5>Tuesday</option>
                        <option value=4>Wednesday</option>
                        <option value=3>Thursday</option>
                        <option value=2>Friday</option>
                        <option value=1>Saturday</option>
                        <option value=0>Sunday</option>
                </select>
                <input type="hidden" id="workday">
                <br><br>
                <label for="week_ending">For Week Ending (Sunday)</label>
                <input id ="week_ending" name="week_ending" type="date" value=<%=Date.today + (Date.today.wday)%>>
                <br><br>
                <input type="submit" value="Edit/View">
            </form>
        </div>

        <div id="jobsite_form">
            <h2>Tasks <button><a href='/jobsite/<%= @jobsite.id %>/tasks'>Add/Edit</a></button></h2>
            <ul style="text-align:left;">
                <% @jobsite.tasks.each do |task| %>
                <li>[<%=task.code%>] <%=task.name%></li>
                <%end%>
            </ul>
        </div>
    </div>
</div>

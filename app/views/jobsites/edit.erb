<h2 id="sub_header">
    <a href="/jobsites">My Jobsites</a>
    <button  id="subheader_button"><a href="/jobsites">Back</a></button>
</h2>

<div id="form">
    <h2>Edit Jobsite </h2>
        <form action="/jobsite/edit/<%=@jobsite.id%>" method="POST">
            <input type="hidden" value="patch" name="_method">
            <label>New site name: </label><input type="text" name="jobsite[name]" value="<%=@jobsite.name%>">
            <input type="submit" value="+">
        </form><br><br>
        <% if @jobsites.size > 0 %>
            <div id="display_list">   
                <h2>My Jobsites</h2> 
                <table>
                    <%@jobsites.each do |jobsite|%>
                        <tr>
                            <td  style="width:1%" ><button><a href="/jobsite/delete/<%= jobsite.id %>">X</a></button></td>
                            <td  style="width:1%" ><button><a href="/jobsite/edit/<%= jobsite.id %>">...</a></button></td>
                            <td padding-left=10px; style="text-align:left;"><%=jobsite.name%></td>
                        </tr>
                    <%end%>
                </table>
            </div>
        <%end%>
</div>
<div class="content">
<h1>Welcome</h1>
    <div id="form">
        <h2>Sign-up</h2>
        <form action="/signup" method="POST">
            <ul>
            <li><label>First Name</label><input type="text" name="user[first_name]" value="<%=current_user.first_name unless current_user.nil?%>" required></li><br>
            <li><label>Last Name</label><input type="text" name="user[last_name]" value="<%=current_user.last_name unless current_user.nil?%>" required></li><br>
            <li><label>Email</label><input type="text" name="user[email]" value="<%=current_user.email unless current_user.nil?%>" required> <label style="color:red;"><label style="color:red;"><%= @error unless @error.blank? %></label></li><br>
            <li><label>Password</label><input type="password" name="user[password]" required></li><br>
            </ul>
            <input type="submit" value="Signup"> 
        </form>
        <form  action="/login/existing" method="get">
            <input type="hidden" name="email" value="<%=current_user.email unless current_user.nil?%>">
            <input type="submit" value="Log In">
        </form>
    </div>
</div>



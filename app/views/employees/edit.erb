<h1><a href="/jobsite/<%=@jobsite.id%>"><%= @jobsite.name %></a></h1>
<h2> Sitecrew</h2> 
    <div>
    <h3>Edit Employee</h3>
    <form class="edit_employee" action="/employee/edit/<%=@employee.id%>" method="post">
        <%# <input id="hidden" type="hidden" name="_method" value="patch"> %>
        <table>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Title</th>
            </tr>
            <tr>  
                <td><input type="text" name="employee[last_name]" value="<%=@employee.last_name%>"></td> 
                <td><input type="text" name="employee[first_name]"  value="<%=@employee.first_name%>"></td>
                <td>
                    <select id="titles" name="employee[title_id]" required>
                        <option value=""></option>
                        <%Title.all.each do |t|%>                    
                        <option value=<%=t.id%> <%='selected' if t.id == @employee.title_id%>><%=t.title%></option>
                        <%end%>
                    </select>     
                </td>
                <td><input type="submit" value="Update"></td>
                <input type="hidden" name="jobsite[id]" value=<%=@jobsite.id%>>
            </tr>
        </table> 
    </form>
<br>

    <table>
        <tr>
            <th></th>
            <th></th>
            <th>Name</th>
            <th>Title</th>
        </tr>
    
    <%@employees.each do |employee|%>
        <tr>
            <td><button id="delete_employee"><a href="/sitecrew/<%=@jobsite.id%>/delete/<%=employee.id%>">X</a></button></td>
            <td><button id="edit_employee"><a href="/sitecrew/<%=@jobsite.id%>/edit/<%=employee.id%>">...</a></button></td>
            <td><%=employee.full_name%></td>
            <td><%=Title.find(employee.title_id).title%></td>
        </tr>
    <%end%>
    </table>

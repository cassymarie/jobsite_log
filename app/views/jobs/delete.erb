<h1><a href="/jobsite/<%=@jobsite.id%>"><%= @jobsite.name %></a></h1>
<h2> Jobs</h2> 
    <div>
        <h3>Delete Job</h3>
        <div>
            <h5> Are you sure you want to delete this job? All associated records for this job will be deleted </h5>
            <form action="/jobsite/<%= @jobsite.id %>/jobs/delete/<%=@job.id%>%" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <table>
                    <tr>
                        <th>Job No.</th>
                        <th>Job Name</th>
                        <th>Customer</th>
                    </tr>
                    <tr>
                        <td><%= @job.job_number %></td> 
                        <td><%= @job.name %></td> 
                        <td><%= @job.customer %></td>
                        <td><input type="hidden" name="job[id]" value=<%=@job.id%> ></td>
                    </tr>
                </table>
                <input type="submit" value="Delete Job">
            </form>
            <button><a href="/jobsite/<%= @jobsite.id %>/jobs/new">Cancel</a></button>
        </div>
        <br>

    </div>